

@model WebApplication5MVCdemo.CommanClasses.UserProfileCombine


@{
    ViewBag.Title = "userProfile";
    Layout = "~/Views/Shared/_LayoutWhiteNav.cshtml";
}

<section class="user-profile-image">
    <img class="img-fluid" src="@Url.Content("~/images/User-Profile/banner-with-overlay.jpg")" alt="User Profile banner">
    <div class="text-on-image-user-profile">
        <h3>User Profile</h3>
    </div>
</section>

@using (Html.BeginForm("MyProfile", "Profile", FormMethod.Post, new { role = "form", enctype = "multipart/form-data"  }))
{

    <!-- Basic Profile Details -->
    <section id="basic-profile-details">
        <div class="container">
            <h3>Basic Profile Details</h3>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    @if (ViewBag.firstName != null)
                    {
                        @Html.LabelFor(x => x.FirstName)
                        @Html.TextBoxFor(x => x.FirstName, new { disabled = "disabled", placeholder = "Enter your First Name", @class = "form-control", required= "required" })
                    }
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    @if (ViewBag.lastName != null)
                    {
                        @Html.LabelFor(x => x.LastName)
                        @Html.TextBoxFor(x => x.LastName, new { disabled = "disabled", placeholder = "Enter your First Name", @class = "form-control", required = "required" })
                    }
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    @if (ViewBag.emailid != null)
                    {
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { disabled = "disabled", placeholder = "Enter your First Name", @class = "form-control", required = "required" })
                    }
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.DOB)
                    @Html.TextBoxFor(x => x.UserProfile.DOB, new { type = "date",placeholder = "Enter your date of birth", @class = "form-control" })
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.Gender)
                    @Html.DropDownListFor(x => x.UserProfile.Gender, new SelectList(Model.Genders, "ID", "Name"), "Select Gender", new { @class = "form-control" })
                </div>
                <div class="col-lg-2 col-md-2 col-sm-3 col-4">
                    @Html.LabelFor(x => x.UserProfile.PhoneNumber)
                    @Html.DropDownListFor(x => x.UserProfile.CountryCode, new SelectList(Model.Countries, "CountryCode", "CountryCode"), "Select Country Code", new { @class = "form-control", required = "required" })
                </div>
                <div class="col-lg-4 col-md-4 col-sm-9 col-8 phone-number">
                    @Html.TextBoxFor(x => x.UserProfile.PhoneNumber, new { placeholder = "Enter your phone Number", @class = "form-control", required = "required" })
                </div>
                <div class="upload-picture col-lg-6 col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.ProfilePicture)
                    <input type="file" name="ProfilePictureFile" class="upload form-control" accept="image/png,image/jpeg,image/jpg" id="UserProfile_ProfilePicture" placeholder="Upload a picture">
                    @Html.ValidationMessage("ProfilePictureFile", "",new { @class = "text-danger"})
                </div>
            </div>
        </div>
    </section>

    <!-- Address Details -->
    <section id="address-details">
        <div class="container">
            <h3>Address Details</h3>
            <div class="row">
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.AddressLine1)
                    @Html.TextBoxFor(x => x.UserProfile.AddressLine1, new { placeholder = "Enter your Address", @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.AddressLine2)
                    @Html.TextBoxFor(x => x.UserProfile.AddressLine2, new { placeholder = "Enter your Address", @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.City)
                    @Html.TextBoxFor(x => x.UserProfile.City, new { placeholder = "Enter your City", @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.State)
                    @Html.TextBoxFor(x => x.UserProfile.State, new { placeholder = "Enter your State", @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.ZipCode)
                    @Html.TextBoxFor(x => x.UserProfile.ZipCode, new { placeholder = "Enter your Zipcode", @class = "form-control", required = "required" })
                </div>
                <div class="col-md-6 xol-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.Country)
                    @Html.DropDownListFor(x => x.UserProfile.Country, new SelectList(Model.Countries, "Name", "Name"), "Select Country", new { @class = "form-control", required = "required" })
                </div>
            </div>
        </div>
    </section>

    <!-- University and College Info.  -->
    <section id="university-college-information">
        <div class="container">
            <h3>University and College Information</h3>
            <div class="row">
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.University)
                    @Html.TextBoxFor(x => x.UserProfile.University, new { placeholder = "Enter your University Name", @class = "form-control" })
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    @Html.LabelFor(x => x.UserProfile.College)
                    @Html.TextBoxFor(x => x.UserProfile.College, new { placeholder = "Enter your College Name", @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-user-profile">SUBMIT</button>
            </div>
        </div>
    </section>

}

