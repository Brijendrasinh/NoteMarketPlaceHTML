@model WebApplication5MVCdemo.CommanClasses.ManageCategoryViewModel


@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-profile">
    <div class="row">
        <div class="main-block col-xl-7 col-lg-10 col-md-10 col-12">
            <h3>Add Category</h3>
            @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { role = "form" }))
            {
                <div class="row">

                    <div class="block col-12">
                        @Html.LabelFor(x => x.CategoryName)
                        @Html.TextBoxFor(x => x.CategoryName, new { placeholder = "Enter your Note Category Name", @class = "form-control", required = "required" })
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.Description)
                        @Html.TextBoxFor(x => x.Description, new { placeholder = "Enter Note Category Description", @class = "form-control", required = "required" })
                    </div>
                    <button type="submit" class="btn btn-submit">SUBMIT</button>

                </div>
            }
        </div>
    </div>
</div>

