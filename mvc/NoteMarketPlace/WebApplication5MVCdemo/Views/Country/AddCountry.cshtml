@model WebApplication5MVCdemo.CommanClasses.ManageCountryViewModel



@{
    ViewBag.Title = "AddCountry";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-profile">
    <div class="row">
        <div class="main-block col-xl-7 col-lg-10 col-md-10 col-12">
            <h3>Add Country</h3>
            @using (Html.BeginForm("AddCountry", "Country", FormMethod.Post, new { role = "form" }))
            {
                <div class="row">

                    <div class="block col-12">
                        @Html.LabelFor(x => x.CountryName)
                        @Html.TextBoxFor(x => x.CountryName,new { placeholder = "Enter your Country Name", @class = "form-control", required = "required" })
                        @*<label for="inputMyProfileCountryName">Country Name *</label>
                        <input class="form-control" placeholder="Enter your Country Name" type="text" id="inputMyProfileCountryName" value="India" required>*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.CountryCode)
                        @Html.TextBoxFor(x => x.CountryCode, new { placeholder = "Enter Country Code",@class = "form-control", required = "required" })
                        @*<label for="inputMyProfileCountryCode">Country Code *</label>
                        <input class="form-control" placeholder="Enter Country Code" type="text" id="inputMyProfileCountryCode" required>*@
                    </div>

                    
                    <button type="submit" class="btn btn-submit">SUBMIT</button>

                </div>
            }

        </div>
    </div>
</div>

