@model NoteMarketPlace.CommanClasses.ConfirmPasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section id="change-password-page">
    <div class="bg">
        <div class="row justify-content-center">
            <div class="col-6 ml-auto mr-auto page-at-center">
                <div class="center-logo">
                    <img class="logo-img" src="~/images/pre-login/top-logo.png" alt="logo">
                </div>
                <div class="form-container">
                    <h3 class="text-center">Change Password</h3>
                    <p class="text-center top">Enter your new password to change your password</p>
                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
                        <div class="form-group old-password">
                            @Html.LabelFor(x => x.OldPassword)
                            @Html.PasswordFor(x => x.OldPassword, new { placeholder = "Enter your Password", @class = "form-control form-control-change-password" })
                            @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "text-danger" })
                            @*<label for="exampleInputOldPassword">Old Password</label>
                                <input type="password" class="form-control form-control-change-password" id="exampleInputOldPassword" placeholder="Enter your Password" required>*@
                            <span toggle="#OldPassword" class="field-icon toggle-password"><img src="~/images/pre-login/eye.png" alt="eye"></span>
                        </div>
                        <div class="form-group new-password">
                            @Html.LabelFor(x => x.NewPassword)
                            @Html.PasswordFor(x => x.NewPassword, new { placeholder = "Enter your New Password", @class = "form-control form-control-change-password" })
                            @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger" })
                            @*<label for="exampleInputNewPassword">New Password</label>
                                <input type="password" class="form-control form-control-change-password" id="exampleInputNewPassword" placeholder="Enter your Password" required>*@
                            <span toggle="#NewPassword" class="field-icon toggle-password"><img src="~/images/pre-login/eye.png" alt="eye"></span>
                        </div>
                        <div class="form-group confirm-password">
                            @Html.LabelFor(x => x.ConfirmPassword)
                            @Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "Enter your Confirm New Password", @class = "form-control form-control-change-password" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                            @*<label for="exampleInputConfirmPassword">Confirm Password</label>
                                <input type="password" class="form-control form-control-change-password" id="exampleInputConfirmPassword" placeholder="Enter your Password" required>*@
                            <span toggle="#ConfirmPassword" class="field-icon toggle-password"><img src="~/images/pre-login/eye.png" alt="eye"></span>
                        </div>
                        <button class="btn btn-login btn-block" type="submit" >SUBMIT</button>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

