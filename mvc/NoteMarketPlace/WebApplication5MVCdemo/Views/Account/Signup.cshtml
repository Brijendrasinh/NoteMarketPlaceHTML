@model WebApplication5MVCdemo.Models.RegisterUser

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section id="sign-up-page">
    <div class="bg">
        <div class="row justify-content-center">
            <div class="page-at-center col-6 ml-auto mr-auto">
                <div class="center-logo">
                    <img class="logo-img" src="@Url.Content("~/images/pre-login/top-logo.png")" alt="logo">
                </div>
                <div class="form-container">
                    <h3 class="text-center">Create an Account</h3>
                    <p class="text-center top sign-up-top">Enter your details to signup</p>
                    <p id="complete-sign-up" class="text-center text-success"><img src="@Url.Content("~/images/pre-login/true-mark.png")" alt="truemark"> Your account has been successfully created.</p>

                    @using (Html.BeginForm("Signup", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName, new { Placeholder = "Enter Your First Name", @class = "form-control form-control-sign-up", required = "required" })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName)
                            @Html.TextBoxFor(m => m.LastName, new { Placeholder = "Enter Your Last Name", @class = "form-control form-control-sign-up", required = "required" })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { Placeholder = "Enter Your Email Address", @class = "form-control form-control-sign-up", required = "required" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { Placeholder = "Enter Your Password", @class = "form-control form-control-sign-up", required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span toggle="#Password" class="field-icon toggle-password"><img src="@Url.Content("~/images/pre-login/eye.png")" alt="eye"></span>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { Placeholder = "Re Enter Your Password", @class = "form-control form-control-sign-up", required = "required" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <span toggle="#ConfirmPassword" class="field-icon toggle-password"><img src="@Url.Content("~/images/pre-login/eye.png")" alt="eye"></span>
                        </div>
                        <button id="sign-up" type="submit" class="btn btn-login btn-block">SIGN UP</button>

                    }
                    <p class="text-center bottom">Already have an account? <a href="@Url.Action("Login","Account")">Login</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

