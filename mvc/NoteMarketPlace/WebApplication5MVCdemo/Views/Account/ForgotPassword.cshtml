@model WebApplication5MVCdemo.Models.User
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section id="forgot-password-page">
    <div class="bg">
        <div class="row justify-content-center">
            <div class="col-6 ml-auto mr-auto page-at-center">
                <div class="center-logo">
                    <img class="logo-img img-fluid" src="@Url.Content("~/images/pre-login/top-logo.png")" alt="logo">
                </div>
                <div class="form-container">
                    <h3 class="text-center">Forgot Password?</h3>
                    <p class="text-center top">Enter your email to reset your password</p>
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        <div class="form-group email">
                            @Html.LabelFor(m => m.EmailID)
                            @Html.TextBoxFor(m => m.EmailID, new { placeholder = "Enter your Email", @class = "form-control form-control-login" })
                            @Html.ValidationMessageFor(m => m.EmailID, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-login btn-block">SUBMIT</button>
                    }
                    </div>
            </div>
        </div>
    </div>
</section>

