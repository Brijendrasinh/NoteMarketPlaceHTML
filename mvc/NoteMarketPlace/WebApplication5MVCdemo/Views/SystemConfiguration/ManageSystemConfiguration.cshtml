@model WebApplication5MVCdemo.CommanClasses.SystemConfigurationViewModel


@{
    ViewBag.Title = "ManageSystemConfiguration";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-profile">
    <div class="row">
        <div class="main-block col-xl-7 col-lg-10 col-md-10 col-12">
            <h3>Manage System Configuration</h3>
            @using (Html.BeginForm("ManageSystemConfiguration","SystemConfiguration",FormMethod.Post,new { role = "form", enctype = "multipart/form-data" }))
            {
                <div class="row">

                    <div class="block col-12">
                        @Html.LabelFor(x => x.SupportEmail)
                        @Html.TextBoxFor(x => x.SupportEmail, new {@class="form-control", placeholder="Enter your Email Address", required ="required"})
                        @*<label for="inputMSCsupportEmail">Support Emails Address *</label>
                        <input class="form-control" placeholder="Enter your Email Address" type="email" id="inputMSCsupportEmail" required>*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.SupportContactNumber)
                        @Html.TextBoxFor(x => x.SupportContactNumber, new { @class = "form-control", placeholder = "Enter Phone number", required = "required" })
                        @*<label for="inputMSCsupportPhone">Support Phone Number *</label>
                        <input class="form-control" placeholder="Enter Phone number" type="text" id="inputMSCsupportPhone" required>*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.EmailAddresses)
                        @Html.TextBoxFor(x => x.EmailAddresses, new { @class = "form-control", placeholder = "Enter your Email Address", required = "required" })
                        @*<label for="inputMSCemailNotification">Email Address(es) (for various events system will send notifications o these users)*</label>
                        <input class="form-control" placeholder="Enter your Email Address" type="email" id="inputMSCemailNotification" required>*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.Facebook)
                        @Html.TextBoxFor(x => x.Facebook, new { @class = "form-control", placeholder = "Enter facebook url" })
                        @*<label for="inputMSCfacebookURL">Facebook URL</label>
                        <input class="form-control" placeholder="Enter facebook url" type="email" id="inputMSCfacebookURL">*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.Twitter)
                        @Html.TextBoxFor(x => x.Twitter, new { @class = "form-control", placeholder = "Enter twitter url" })
                        @*<label for="inputMSCtwitterURL">Twitter URL</label>
                        <input class="form-control" placeholder="Enter twitter url" type="email" id="inputMSCtwitterURL">*@
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.Linkdin)
                        @Html.TextBoxFor(x => x.Linkdin, new { @class = "form-control", placeholder = "Enter linkedin url" })
                        @*<label for="inputMSClinkedinURL">Linkedin URL</label>
                        <input class="form-control" placeholder="Enter linkedin url" type="email" id="inputMSClinkedinURL">*@
                    </div>
                    <div class="block col-12 upload-picture">
                        @*<label for="inputMyProfile">Default image for notes (if seller do not upload)</label>*@
                        @Html.LabelFor(x => x.DefaultNotePicture)
                        <input type="file" class="upload form-control" name="DefaultNotePicturefile" id="DefaultNotePicture">

                    </div>
                    <div class="block col-12 upload-picture">
                        @*<label for="inputMyProfile">Default Profile Picture (if seller do not upload)</label>*@
                        @Html.LabelFor(x => x.DefaultProfilePicture)
                        <input type="file" class="upload form-control" name="DefaultProfilePicturefile" id="DefaultProfilePicture">

                    </div>
                    <!-- Not working proper because there is no form tag -->
                    <button type="submit" class="btn btn-submit">SUBMIT</button>

                </div>
            }

        </div>
    </div>
</div>

