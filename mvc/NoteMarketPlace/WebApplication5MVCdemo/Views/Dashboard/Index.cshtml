}

<section id="dashboard-top">
    <div class="container">
        <div class="row">
            <div class="col-6 text-left">
                <h4>Dashboard</h4>
            </div>
            <div class="col-6 text-right ">
                <a class="btn btn-add-note" href="@Url.Action("AddNotes","Dashboard")" title="Add Note" role="button">ADD NOTE</a>
            </div>
            <div class="col-lg-7 col-12 text-center row left-box">
                <div class="col-4 block-1 block">
                    <img src="Front_images/images/my-earning.png" class="img-fluid" alt="eye">
                    <h5>My Earning</h5>
                </div>
                <div class="col-4 block-2 block">
                    <a class="links" href="my-sold-note.html">
                        <h5>100</h5>
                    </a>
                    <p>Number of Notes Sold</p>
                </div>
                <div class="col-4 block-3 block">
                    <a class="links" href="my-sold-note.html">
                        <h5>$10,00,000</h5>
                    </a>
                    <p>Money Earned</p>
                </div>
            </div>
            <div class="col-lg-5 col-12 right-box justify-content-center text-center row">
                <div class="col-4">
                    <div class="block">
                        <a class="links" href="my-download.html">
                            <h5>38</h5>
                        </a>
                        <p>My Downloads</p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="block">
                        <a href="my-rejected-notes.html" class="links">
                            <h5>12</h5>
                        </a>
                        <p>My Rejected Notes</p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="block">
                        <a href="buyer-request.html" class="links">
                            <h5>102</h5>
                        </a>
                        <p>Buyer Requests</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

