<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Note Market Place</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Raleway:wght@100;200;300;400;500;600;700&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <header>
        <nav id="home-navbar" class="navbar navbar-expand-md fixed-top">
            <div class="container site-nav-wrapper">

                <!-- Mobile Menu Open Button -->
                <span class="ml-auto" id="mobile-nav-open-btn">&#9776;</span>

                <div class="navbar-header">
                    <!-- Logo -->
                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        <img src="@Url.Content("~/images/pre-login/top-logo.png")" alt="logo">
                    </a>
                </div>

                <!-- Main Nav -->
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto" id="main-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SearchNotes","Home")">Search Notes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AddNotes","Home")">Sell Your Notes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="" @Url.Action("FAQ", "Home") "">FAQ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact","Home")">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn home-nav-btn" href="@Url.Action("Login","Account")" title="Login" role="button">Login</a>
                        </li>
                    </ul>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-nav">

                    <!-- Mobile Menu Close Button -->
                    <span id="mobile-nav-close-btn">&times;</span>

                    <div id="mobile-nav-content">
                        <ul class="nav flex-column">
                            <li><a class="nav-link smooth-scroll" href="search-notes.html">Search Notes</a></li>
                            <li><a class="nav-link smooth-scroll" href="add-notes.html">Sell Your Notes</a></li>
                            <li><a class="nav-link smooth-scroll" href="FAQ.html">FAQ</a></li>
                            <li><a class="nav-link smooth-scroll" href="contact-us.html">Contact Us</a></li>
                            <li class="nav-item">
                                <a class="btn home-nav-btn" href="login.html" title="Login" role="button">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </nav>
    </header>
    @RenderBody()
    <!-- Footer  -->
    <footer class="footer">
        <div class="container">
            <div class="row copyright">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-7 col-12 text-left">
                    <p class="copyright-text">Copyright &copy; TatvaSoft All rights reserved.</p>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-12 text-right">
                    <ul class="social-list">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <!-- Bootstrap Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

    @Scripts.Render("~/bundles/bootstrap")


    <script>
        $(function () {

            ShowHideNav();
            // show hide nav on page load


            $(window).scroll(function () {

                // show hide nav on page load
                ShowHideNav();
            });
        });

        function ShowHideNav() {
            if ($(window).scrollTop() > 50) {

                // show white nav
                $("nav").addClass("white-nav-top");

                //show dark logo
                $(".navbar-header img").attr("src", "/Content/images/pre-login/logo.png");

                ////show back to top button
                //$("#back-to-top").fadeIn();

            } else {

                // hide white nav
                $("nav").removeClass("white-nav-top");

                //hide dark logo
                $(".navbar-header img").attr("src", "/Content/images/pre-login/top-logo.png");

                ////hide back to top button
                //$("#back-to-top").fadeOut();

            }


        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
