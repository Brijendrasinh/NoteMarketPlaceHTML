@model WebApplication5MVCdemo.CommanClasses.ManageTypeViewModel


@{
    ViewBag.Title = "AddType";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container my-profile">
    <div class="row">
        <div class="main-block col-xl-7 col-lg-10 col-md-10 col-12">
            <h3>Add Type</h3>
            @using (Html.BeginForm("AddType", "Type", FormMethod.Post, new { role = "form" }))
            {
                <div class="row">

                    <div class="block col-12">
                        @Html.LabelFor(x => x.Type)
                        @Html.TextBoxFor(x => x.Type, new { placeholder = "Enter your Note Type Name", @class = "form-control", required = "required" })
                    </div>
                    <div class="block col-12">
                        @Html.LabelFor(x => x.Description)
                        @Html.TextBoxFor(x => x.Description, new { placeholder = "Enter Note Type Description", @class = "form-control", required = "required" })
                    </div>
                    <button type="submit" class="btn btn-submit">SUBMIT</button>
                </div>
            }
        </div>
    </div>
</div>

