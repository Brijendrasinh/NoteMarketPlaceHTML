@model WebApplication5MVCdemo.CommanClasses.ContactPageLogedUSer
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutWhiteNav.cshtml";
}

<section class="user-profile-image">
    <img class="img-fluid" src="@Url.Content("~/images/User-Profile/banner-with-overlay.jpg")" alt="User Profile banner">
    <div class="text-on-image-user-profile">
        <h3>Contact Us</h3>
    </div>
</section>

<section id="contact-us">
    <div class="container">
        <h3>Get in Touch</h3>
        <p>Let us know how to get back to you</p>
        @*<form>*@
        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { role = "form" }))
        {
            <div class="row">
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="row">
                        <div class="col-md-12 col-12">
                            @{
                                if (ViewBag.fullName != null)
                                {
                                    @Html.LabelFor(x => x.FullName)
                                    @Html.TextBoxFor(m => m.FullName, new { disabled = "disabled", placeholder = "Enter your full name", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                }
                                else
                                {
                                    @Html.LabelFor(x => x.FullName)
                                    @Html.TextBoxFor(m => m.FullName, new { placeholder = "Enter your full name", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                                }

                            }
                            @*<label for="inputContactUsFullName">Full Name *</label>
        <input type="text" class="form-control" id="inputContactUsFullName" placeholder="Enter your Full name" required>*@

                        </div>
                        <div class="col-md-12 col-12">
                            @{
                                if (ViewBag.email != null)
                                {
                                    @Html.LabelFor(x => x.EmailId)
                                    @Html.TextBoxFor(m => m.EmailId, new { disabled = "disabled", placeholder = "Enter your full name", @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                }
                                else
                                {
                                    @Html.LabelFor(x => x.EmailId)
                                    @Html.TextBoxFor(m => m.EmailId, new { placeholder = "Enter your full name", @class = "form-control", required = "required" })
                                    @Html.ValidationMessageFor(m => m.EmailId, "", new { @class = "text-danger" })
                                }

                            }
                            @*<label for="inputContactUsEmailAddress">Email Address *</label>
        <input type="text" class="form-control" id="inputContactUsEmailAddress" placeholder="Enter your email address" required>*@

                        </div>
                        <div class="col-md-12 col-12">
                            @Html.LabelFor(x => x.Subject)
                            @Html.TextBoxFor(m => m.Subject, new { placeholder = "Enter your Subject", @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                            @*<label for="inputContactUsSubject">Subject *</label>
                                <input type="text" class="form-control" id="inputContactUsSubject" placeholder="Enter your subject" required>*@

                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 padding-top-hide  col-12">
                    <div class="row">
                        <div class="col-md-12 col-12 padding-top-hide">
                            @Html.LabelFor(x => x.Comment)
                            @Html.TextAreaFor(m => m.Comment, new { placeholder = "Comments...", rows = "11", cols = "50", @class = "comment form-control", required = "required" })
                            @Html.ValidationMessageFor(m => m.Comment, "", new { @class = "text-danger" })
                            @*<label for="inputContactUsComment">Comments / Questions *</label>
                                <textarea type="text" class="comment form-control" id="inputContactUsComment" placeholder="Comments..." cols="50" rows="11" required></textarea>*@
                        </div>
                    </div>

                </div>
                <button type="submit" class="btn btn-contact-us">SUBMIT</button>
            </div>
        }
        @*</form>*@
    </div>
</section>

